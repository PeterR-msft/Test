{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ForeignTenantID": {
            "type": "string",
            "metadata": {
                "description": "Directory/TeanantID of the foreign tenant where the foreign SIG you want to deploy from is located"
            }
        },
        "ForeignUsername": {
            "type": "string",
            "metadata": {
                "description": "Username to foreign tenant"
            }
        },
        "ForeignPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password to user for foreign tenant"
            }
        },
        "storageAccountResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The storage account containing the custom VHD."
            }
        },
        "SharedImageGalleryResourceGroup": {
			"type": "string",
			"metadata": {
				"description": "ResourceGroup name of the Shared Image Gallery"
			}
		},
		"SharedImageGalleryName": {
			"type": "string",
			"metadata": {
				"description": "Name of the Shared Image Gallery."
			}
		},
		"SharedImageGalleryDefinitionName": {
			"type": "string",
			"metadata": {
				"description": "Name of the Image Definition."
			}
		},
		"SharedImageGalleryVersionName": {
			"type": "string",
			"metadata": {
				"description": "Name of the Image Version - should follow <MajorVersion>.<MinorVersion>.<Patch>."
			}
		},
        "rdshPrefix": {
            "type": "string",
            "metadata": {
                "description": "This prefix will be used in combination with the VM number to create the VM name. This value includes the dash, so if using “rdsh” as the prefix, VMs would be named “rdsh-0”, “rdsh-1”, etc. You should use a unique prefix to reduce name collisions in Active Directory."
            },
            "defaultValue": "[take(toLower(resourceGroup().name),10)]"
        },
        "rdshNumberOfInstances": {
            "type": "int",
            "metadata": {
                "description": "Number of session hosts that will be created and added to the hostpool."
            }
        },
        "rdshVMDiskType": {
            "type": "string",
            "allowedValues": [
                "Premium_LRS",
                "StandardSSD_LRS",
                "Standard_LRS"
            ],
            "metadata": {
                "description": "The VM disk type for the VM: Premium_LRS (Default), Standard_LRS or StandardSSD_LRS."
            },
            "defaultValue": "Premium_LRS"
        },
        "rdshVmSize": {
            "type": "string",
            "metadata": {
                "description": "The size of the session host VMs."
            },
            "defaultValue": "Standard_A2"
        },
        "enableAcceleratedNetworking": {
            "type": "bool",
            "metadata": {
                "description": "Enables Accelerated Networking feature, notice that VM size must support it, this is supported in most of general purpose and compute-optimized instances with 2 or more vCPUs, on instances that supports hyperthreading it is required minimum of 4 vCPUs."
            },
            "defaultValue": false
        },
        "existingDomainusername": {
            "type": "string",
            "metadata": {
                "description": "The username for the admin."
            }
        },
        "existingDomainPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password that corresponds to the existing domain username."
            }
        },
        "subnet-id": {
            "type": "string",
            "metadata": {
                "description": "The unique id of the subnet for the nics."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Location for all resources to be created in."
            }
        },
        "enablePersistentDesktop": {
            "type": "bool",
            "metadata": {
                "description": "Set this parameter to true if you would like to enable Persistent Desktop experience. Defaults to false."
            },
            "defaultValue": false
        }
    },
    "variables": {
        "storageAccountType": "[parameters('rdshVMDiskType')]",
        "foreignsubscriptionid": "94049871-6f70-4a7b-b92b-da5ea6ecd3dd",
        "availabilitySetId": {
            "id": "[if(equals(parameters('enablePersistentDesktop'),bool('False')),resourceId('Microsoft.Compute/availabilitySets/', concat(parameters('rdshPrefix'), 'availabilitySet')),json('null'))]"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('rdshPrefix'), copyindex(), '-nic')]",
            "location": "[parameters('location')]",
            "copy": {
                "name": "rdsh-nic-loop",
                "count": "[parameters('rdshNumberOfInstances')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('subnet-id')]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": "[parameters('enableAcceleratedNetworking')]"
            }
        },
        {
            "apiVersion": "2018-10-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('rdshPrefix'), copyindex())]",
            "location": "[parameters('location')]",
            "copy": {
                "name": "rdsh-vm-loop",
                "count": "[parameters('rdshNumberOfInstances')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('rdshPrefix'), copyindex(), '-nic')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('rdshVmSize')]"
                },
                "availabilitySet": "[if(equals(parameters('enablePersistentDesktop'),bool('False')),variables('availabilitySetId'),json('null'))]",
                "osProfile": {
                    "computerName": "[concat(parameters('rdshPrefix'), copyindex())]",
                    "adminUsername": "[parameters('existingDomainUsername')]",
                    "adminPassword": "[parameters('existingDomainPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "/subscriptions/94049871-6f70-4a7b-b92b-da5ea6ecd3dd/resourceGroups/PRISIG-RG/providers/Microsoft.Compute/galleries/PRISIG/images/Win10Imagedef/versions/0.0.1"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('storageAccountType')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('rdshPrefix'), copyindex(), '-nic'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                },
                "licenseType": "Windows_Client"
            }
        }
    ],
    "outputs": {}
}
